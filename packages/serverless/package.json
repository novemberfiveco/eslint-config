{
  "name": "@novemberfiveco/eslint-config-serverless",
  "version": "2.0.0",
  "private": false,
  "description": "ESLint configuration for Serverless projects used by November Five",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "main": "index.mjs",
  "homepage": "https://github.com/novemberfiveco/eslint-config/blob/master/packages/serverless/README.md",
  "author": "Min Jie Fan <minjie@novemberfive.co>",
  "license": "MIT",
  "dependencies": {
    "@novemberfiveco/eslint-config-typescript": "^2.0.1",
    "eslint-plugin-drizzle": "^0.2.3"
  },
  "peerDependencies": {
    "eslint": ">=9.24.0 <10.0.0",
    "prettier": ">=3.5.0",
    "typescript": ">=4.8.4 <6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "eslint-config-serverless@${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "eslint-config-serverless@${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
