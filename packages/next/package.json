{
  "name": "@novemberfiveco/eslint-config-next",
  "version": "0.6.0",
  "private": false,
  "description": "ESLint configuration for Next.js projects used by November Five",
  "keywords": [
    "eslint",
    "eslintconfig",
    "next.js",
    "nextjs",
    "typescript"
  ],
  "main": "index.js",
  "homepage": "https://github.com/novemberfiveco/eslint-config#readme",
  "author": "Yens Broothaers <yens@novemberfive.co>",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-storybook": "^0.8.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^7.0.2",
    "release-it": "^16.2.1"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0",
    "next": ">=12.3.4",
    "prettier": "^2.8.5 || ^3.0.3",
    "typescript": ">=4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "eslint-config-next@${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "esling-config-next@${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
