{
  "name": "@novemberfiveco/eslint-config-typescript",
  "version": "1.0.0",
  "private": false,
  "description": "Our base TypeScript ESLint configuration that all other packages extend from. Can also be used standalone for any TypeScript project or as the foundation for new framework-specific configurations.",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "main": "index.mjs",
  "homepage": "https://github.com/novemberfiveco/eslint-config/blob/master/packages/typescript/README.md",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-no-relative-import-paths": "1.6.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.0.0",
    "typescript-eslint": "8.30.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "10.0.0",
    "release-it": "18.1.2"
  },
  "peerDependencies": {
    "typescript": ">=4.8.4 <6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "eslint-config-typescript@${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "esling-config-typescript@${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
