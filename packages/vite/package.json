{
  "name": "@novemberfiveco/eslint-config-vite",
  "version": "1.0.0",
  "private": false,
  "description": "ESLint configuration for Vite projects used by November Five",
  "keywords": [
    "eslint",
    "eslintconfig",
    "vite",
    "typescript"
  ],
  "main": "index.mjs",
  "author": "Adriaan Marain <adriaan@novemberfive.co>",
  "license": "MIT",
  "homepage": "https://github.com/novemberfiveco/eslint-config/blob/master/packages/vite/README.md",
  "dependencies": {
    "@novemberfiveco/eslint-config-typescript": "0.1.6",
    "@tanstack/eslint-plugin-query": "5.73.3",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "0.12.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "10.0.0",
    "release-it": "18.1.2"
  },
  "peerDependencies": {
    "eslint": ">=9.24.0 <10.0.0",
    "prettier": ">=3.5.0",
    "typescript": ">=4.8.4 <6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "eslint-config-vite@${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "esling-config-vite@${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
