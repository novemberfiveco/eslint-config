{
  "name": "@novemberfiveco/eslint-config-react-native",
  "version": "0.4.0",
  "private": false,
  "description": "ESLint configuration for React Native projects used by November Five",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "react native"
  ],
  "main": "index.js",
  "homepage": "https://github.com/novemberfiveco/eslint-config#readme",
  "author": "Lazlo De Bock <lazlo.debock@novemberfive.co>",
  "license": "MIT",
  "dependencies": {
    "@react-native/eslint-config": "^0.72.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "release-it": "^15.9.3"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "prettier": ">=3.0.3",
    "typescript": ">=5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "eslint-config-react-native@${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "esling-config-react-native@${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
